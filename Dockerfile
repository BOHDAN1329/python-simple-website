FROM python:3.9-slim

# Встановлюємо робочу директорію в контейнері
WORKDIR /app

# Встановлюємо Flask напряму через pip
RUN pip install flask

# Копіюємо весь вміст проєкту у контейнер
COPY . .

# Відкриваємо порт, на якому працюватиме додаток
EXPOSE 4949

# Команда для запуску Flask-додатка
CMD ["python", "app.py"]
